    // Select quiz of the day based on date
    function getQuizOfTheDay() {
      const day = new Date().getDate();
      return quizzes[day % quizzes.length];
    }

    // Render quiz
    function renderQuiz() {
      const quiz = getQuizOfTheDay();
      const quizForm = document.getElementById('quiz-form');
      const quizTitle = document.getElementById('quiz-title');
      quizTitle.textContent = quiz.title;
      quizForm.innerHTML = '';
      quiz.questions.forEach((q, idx) => {
        const div = document.createElement('div');
        div.classList.add('quiz-question-block');
        div.innerHTML = `
          <p class="quiz-question">${idx+1}. ${q.q}</p>
          <ul class="quiz-options">
            ${q.options.map((opt, i) => `
              <li>
                <label>
                  <input type="radio" name="q${idx}" value="${i}" required />
                  ${opt}
                </label>
              </li>`).join('')}
          </ul>
        `;
        quizForm.appendChild(div);
      });
    }

    // Handle quiz submission
    document.getElementById('submit-btn').addEventListener('click', function(){
      const quiz = getQuizOfTheDay();
      const quizForm = document.getElementById('quiz-form');
      const formData = new FormData(quizForm);
      let score = 0;
      for(let i=0; i<quiz.questions.length; i++){
        const userAnswer = formData.get('q'+i);
        if(userAnswer !== null && parseInt(userAnswer) === quiz.questions[i].answer){
          score++;
        }
      }
      const result = document.getElementById('quiz-result');
      result.textContent = `You scored ${score} out of ${quiz.questions.length}.`;
      if(score === quiz.questions.length){
        result.style.color = 'green';
        result.textContent += " Perfect score! Well done!";
      } else if(score >= quiz.questions.length * 0.7){
        result.style.color = 'orange';
        result.textContent += " Great job! Keep practicing.";
      } else {
        result.style.color = 'red';
        result.textContent += " Keep studying and try again.";
      }
    });

    renderQuiz();

    // Chatbox functionality
    const chatToggle = document.getElementById('chat-toggle');
    const chatBox = document.getElementById('chatbox');

    chatToggle.addEventListener('click', () => {
      if(chatBox.style.display === 'flex'){
        chatBox.style.display = 'none';
      } else {
        chatBox.style.display = 'flex';
      }
    });

    const chatForm = document.getElementById('chat-form');
    const chatInput = document.getElementById('chat-input');
    const chatMessages = document.getElementById('chat-messages');

    // Simulate AI responses (basic keyword matching for demonstration)
    function getBotResponse(message) {
      const msg = message.toLowerCase();

      if(msg.includes('donoghue')) return "Donoghue v Stevenson established the 'neighbour principle' and duty of care in negligence.";
      if(msg.includes('brown')) return "R v Brown is a key case on consent in criminal law involving bodily harm.";
      if(msg.includes('handyside')) return "Handyside v UK deals with freedom of expression under the European Convention on Human Rights.";
      if(msg.includes('irac')) return "IRAC stands for Issue, Rule, Application, Conclusion – a method for structuring law essays.";
      if(msg.includes('cases')) return "Important cases like Donoghue v Stevenson, R v Brown, and Handyside v UK are foundational in A-Level Law.";
      if(msg.includes('essay')) return "Focus on the IRAC structure and use key cases and statutes to support your arguments.";
      if(msg.includes('quiz')) return "Try the daily quizzes on this site to test your knowledge and improve.";
      if(msg.includes('help')) return "I'm here to help! Ask me about cases, essay tips, or anything related to A-Level Law.";
      if(msg.includes('hi') || msg.includes('hello')) return "Hello! How can I help you with your A-Level Law studies today?";
      return "Sorry, I don't have an answer for that yet. Try asking about important cases, study tips, or the IRAC method.";
    }

    chatForm.addEventListener('submit', e => {
      e.preventDefault();
      const userMsg = chatInput.value.trim();
      if(userMsg === '') return;

      // Display user message
      const userDiv = document.createElement('div');
      userDiv.classList.add('user-msg');
      userDiv.textContent = userMsg;
      chatMessages.appendChild(userDiv);

      // Clear input
      chatInput.value = '';
      chatMessages.scrollTop = chatMessages.scrollHeight;

      // Bot reply (simulate delay)
      setTimeout(() => {
        const botReply = getBotResponse(userMsg);
        const botDiv = document.createElement('div');
        botDiv.classList.add('bot-msg');
        botDiv.textContent = botReply;
        chatMessages.appendChild(botDiv);
        chatMessages.scrollTop = chatMessages.scrollHeight;
      }, 700);
    });

  </script>

  <!-- Chatbox container -->
  <div id="chatbox-container">
    <button id="chat-toggle" aria-label="Toggle chatbox"><i class="fas fa-comments"></i></button>
    <div id="chatbox">
      <div id="chat-header">Law Study Chatbot</div>
      <div id="chat-messages"></div>
      <form id="chat-form">
        <input id="chat-input" type="text" placeholder="Ask me about A-Level Law..." autocomplete="off" />
        <button type="submit"><i class="fas fa-paper-plane"></i></button>
      </form>
    </div>
  </div>

